{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productTitle": {
      "type": "string",
      "required": true
    },
    "productPrice": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "rating": {
      "type": "integer",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "men",
        "women"
      ],
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    }
  }
}
